

<div class="container push-top-bottom">
    <div class="col-md-6 col-md-offset-3">
	   <div class="box">
<%= form_for(@entry) do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% @entry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
          
            <fieldset>		

				<div class="form-group">
					<label>Title</label>
                    <%= f.text_field :title, class:"form-control", required:true%>
				</div><!-- /.form-group -->

				<div class="form-group">
					<label>Description</label>
                    <%= f.text_area :description, class:"form-control"%>
				</div><!-- /.form-group -->
                <div class="form-group">
					<label>Tags</label>
                    <%= f.text_field :tag, class:"form-control", placeholder:"use commas to separate tags"%>
				</div><!-- /.form-group -->
                <div class="form-group">
					<label>Video Upload</label>
                    <%= f.file_field :reel, class:"form-control"%>
				</div><!-- /.form-group -->
                <div class="center">
                    <%= f.submit "Submit Video", class:"btn btn-primary btn-large btn3d" %>
			      </div><!-- /.center -->
                
			</fieldset>
            <%= link_to 'Back', entries_path %>
        </div>
    </div>
</div>
<% end %>