<p id="notice"><%= notice %></p>


<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            
            <%= cl_video_tag( File.basename(URI.parse(@entry.reel.to_s).path), :width=>550, :height=>400, :crop=>"scale",:loop => true, :autoplay => true, :poster => false,
                    :fallback_content => "Your browser does not support HTML5 video tags") %>
            <p> by <%= link_to @entry.user.username, @entry.user%> </p>
            <h2><%= @entry.title %></h2>
            <p><strong>Description:</strong> <%= @entry.description %></p>
            <p><strong>Tags:</strong> <%= @entry.tag %></p>
            
            <%= render 'disqus' %>
            <div class="text-center">
                <% if Entry.exists?(@entry.id + 1)%>
                   <a href="/entries/<%= @entry.id + 1%>" class="btn btn-primary pull-right">Next Video<i class="fa fa-arrow-right"></i></a>
                <% end %>
                <% if Entry.exists?(@entry.id - 1)%>
                    <a href="/entries/<%= @entry.id - 1%>" class="btn btn-primary pull-left"><i class="fa fa-arrow-left"></i> Previous</a>
                <% end %>
            </div>
        </div>
        <div class="col-md-6"></div>
    </div>
</div>
