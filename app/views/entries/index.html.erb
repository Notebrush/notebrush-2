




<div class="container">
	<div class="page-title">
		<h2>Showing All Videos</h2>
	</div><!-- /.page-title -->


	<div class="row">
		<div class="col-sm-12 col-xl-10">
			<div class="cards-wrapper">
				<div class="row">
					 <% @entries.each do |entry| %>
						<div class="col-sm-6 col-md-4">
							<div class="card">
                        <%= link_to (image_tag entry.reel.to_s.gsub('.mp4', '.jpg'), class:"card-image", width:"100%"), entry%>
                        <div class="card-content">
                            <h3><%= entry.user.email %></h3>
                            <h2><%= entry.title %></h2>
                        </div><!-- /.card-content -->

                        <div class="card-actions">
                            <a href="#" class="card-action-icon"><i class="md-icon">favorite</i></a>
                            <a href="#" class="card-action-icon"><i class="md-icon">flag</i></a>
                            <%= link_to "Watch Video", entry, class:"card-action-btn btn btn-transparent" %>
                        </div><!-- /.card-actions -->
                    </div><!-- /.card -->
						</div><!-- /.col-* -->
					 <% end %>
				</div><!-- /.row -->
			</div><!-- /.card-wrapper -->
		</div><!-- /.col-* -->	
	</div><!-- /.row -->
</div><!-- /.container -->