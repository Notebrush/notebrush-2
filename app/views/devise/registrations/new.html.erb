<div class="container login-form">
	<div class="row">
		<div class="col-lg-5 col-lg-offset-4">
			<h2>Sign Up</h2>

			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= devise_error_messages! %>
                <div class="form-group">
                    <label for="">Email</label>
                    <%= f.email_field :email, class:"form-control", autofocus: true %>
                  </div>
                <div class="form-group">
                    <label for="">Password</label>
                    <%= f.password_field :password, class:"form-control", autocomplete: "off", placeholder: "8 characters minimum" %>
                  </div>
                
                <div class="form-group">
                    <label for="">Password Confirmation</label>
                    <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "off"%>
                  </div>

				<div class="form-group-btn">
                    <%= f.submit "Sign Up", class:"btn btn-primary pull-right" %>
				</div><!-- /.form-group-btn -->

				<div class="form-group-bottom-link">
                    <%= render "devise/shared/links" %>
				</div><!-- /.form-group-bottom-link -->
			<% end %>
		</div><!-- /.col-* -->
	</div><!-- /.row -->
</div><!-- /.container -->