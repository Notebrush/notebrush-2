
<div class="row">
  <aside class="col-md-4 col-md-offset-4">
    <h3><%= @title %></h3>
    <section class="user_info">
        <h1><%= @user.username %></h1>
      <span><%= link_to "view my profile", @user %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
        <br>
      <% if @users.any? %>
        <div class="user_avatars">
            <% @users.each do |user| %>
                <div class="card">
                    <div class="card-content">
                        <%= link_to image_tag(user.gravatar_url), user, class:"nav-link circle user-avatar-image"%>
                        <strong><%= user.username %></strong>
                    </div>
                </div>
            <% end %>
        </div>
      <% end %>
    </section>
  </aside>
</div>