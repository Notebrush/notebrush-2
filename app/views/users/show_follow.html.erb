
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
        <h1><%= @user.email %></h1>
      <span><%= link_to "view my profile", @user %></span>
        <span><b>Entries:</b></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= image_tag current_user.gravatar_url, class:"nav-link circle user-avatar-image"%>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>

  </div>
</div>